<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well text-center">
      <h1>Which <%= @food.upcase %> in <%= @location.upcase %> shall you choose?</h1>
    </div>
  </div>
</div>
<div class="container">
<div class="row">
  <% @results.businesses.each do |biz| %>
    
      <div class="well text-center">
        <h3><%= biz.name %></h3>
        <p>
          <%= image_tag biz.rating_img_url_large, alt: "Yelp Rating" %>
        </p>
        <p>
          <% biz.location.display_address.each do |add_line| %>
            <%= add_line %><br />
          <% end %>
        </p>
      </div>
   
  <% end %>
  </div>
</div>